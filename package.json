{
  "name": "qails",
  "version": "3.0.0-alpha.0",
  "description": "an ORM and RESTful nodejs web framework based Koa2 like Ruby on Rails. ",
  "repository": "qails/qails",
  "main": "dist/index.js",
  "bin": {
    "babel": "./node_modules/.bin/babel",
    "babel-node": "./node_modules/.bin/babel-node",
    "eslint": "./node_modules/.bin/eslint",
    "knex": "./node_modules/.bin/knex"
  },
  "files": [
    "dist"
  ],
  "license": "MIT",
  "nyc": {
    "include": [
      "src"
    ],
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "report-dir": "./coverage"
  },
  "scripts": {
    "build": "rimraf dist && babel src -d dist",
    "lintModifiedFiles": "git diff --name-only --diff-filter=ACMRTUXB | grep -E '\\.(js)(\\..+)?$' | xargs eslint",
    "lint": "eslint --fix --quiet \"**/*.js\"",
    "release": "standard-version && npm publish",
    "prepublish": "npm run build",
    "postrelease": "git push && git push origin --tags",
    "test": "mocha",
    "cover": "nyc npm test",
    "coveralls": "npm run cover && cat ./coverage/lcov.info | coveralls",
    "pre-commit": "npm run lint && npm run test"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "bookshelf": "^0.11.1",
    "bookshelf-cascade-delete-fix": "^2.0.1",
    "bookshelf-json-columns-fix": "^2.1.1",
    "bookshelf-mask": "^2.0.1",
    "bookshelf-modelbase": "^2.10.4",
    "bookshelf-paranoia": "^0.11.0",
    "bookshelf-uuid": "^1.0.0",
    "dotenv": "^4.0.0",
    "eslint": "^4.11.0",
    "eslint-config-qunar": "^1.2.1",
    "eslint-plugin-import": "^2.7.0",
    "file-stream-rotator": "0.2.0",
    "graphql": "^0.11.2",
    "graphql-tools": "^2.6.1",
    "import-fresh": "^2.0.0",
    "joi": "^10.6.0",
    "knex": "^0.14.0",
    "koa": "^2.3.0",
    "koa-bodyparser": "^4.2.0",
    "koa-graphql": "^0.7.3",
    "koa-json": "^2.0.2",
    "koa-morgan": "^1.0.1",
    "koa-pug": "^3.0.0-2",
    "koa-qs": "^2.0.0",
    "koa-router": "^7.3.0",
    "koa-session": "^5.5.0",
    "koa-static": "^4.0.2",
    "koa2-cors": "^2.0.5",
    "lodash": "^4.17.4",
    "merge-graphql-schemas": "^1.1.3",
    "minimatch": "^3.0.4",
    "mkdirp": "^0.5.1",
    "mysql": "^2.14.1",
    "object-assign": "^4.1.1",
    "packing-glob": "^1.0.1",
    "require-all": "^2.2.0",
    "rimraf": "^2.6.2",
    "statsd-client": "^0.4.0",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "casual": "^1.5.17",
    "coveralls": "^3.0.0",
    "date-fns": "^1.29.0",
    "dotenv-expand": "^4.0.1",
    "fs-extra": "^4.0.2",
    "mocha": "^4.0.1",
    "nyc": "^11.3.0",
    "pre-commit": "^1.2.2",
    "should": "^13.1.3",
    "supertest": "^3.0.0"
  },
  "engines": {
    "node": ">= 7.6.0",
    "npm": ">= 3.0.0"
  },
  "pre-commit": [
    "pre-commit"
  ]
}
